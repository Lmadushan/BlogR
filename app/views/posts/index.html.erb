<h1>Posts</h1>

<div class="posts">
	<% @posts.each do |post| %>
		<div class="post">
			<h3><%= link_to post.title, post_path(post) %></h3>
			<p><%= post.body %></p>
			<ul class="post-actions">
				<li> <%= link_to "Edit", edit_post_path(post) %> </li>
				<li> <%= link_to "Delete", post_path(post), data: {confirm: "Are you sure you want to delete: #{post.title}?", }, method: :delete %> </li>
			</ul>
		</div>
	<% end %>
</div>