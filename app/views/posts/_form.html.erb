<% if @errors.present? %>
	<div class="errors">
		<ul>
			<% @errors.each do | error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for @post do |form| %>
	<div class="form-group">
		<%= form.label :title %>
		<%= form.text_field :title %>
	</div>

	<div class="form-group">
		<%= form.label :body %>
		<%= form.text_area :body %>
	</div>

	<div class="actions">
		<%= form.submit %>
	</div>
<% end %>
